# Required for React 19 compatibility
# react-helmet-async@2.0.5 only supports React ^18.0.0
# but works fine with React 19 using legacy peer deps
legacy-peer-deps=true

# Ensure optional dependencies are installed correctly
# Fixes issue with @rollup/rollup-linux-x64-gnu not being installed
# when using npm ci with legacy-peer-deps
install-strategy=hoisted
