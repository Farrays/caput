# Security Headers for Production
# This file is used by Netlify and other hosting providers
# For other hosts, configure these headers in your hosting settings

/*
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.google-analytics.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:; connect-src 'self' https://www.google-analytics.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'

  # Prevent clickjacking
  X-Frame-Options: DENY

  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # Enable XSS protection
  X-XSS-Protection: 1; mode=block

  # Referrer policy
  Referrer-Policy: strict-origin-when-cross-origin

  # Permissions policy
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=()

  # Strict Transport Security (HSTS) - 1 year
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Cache control for assets
  Cache-Control: public, max-age=31536000, immutable

/assets/*
  Cache-Control: public, max-age=31536000, immutable

/*.html
  Cache-Control: public, max-age=0, must-revalidate

/
  Cache-Control: public, max-age=0, must-revalidate
